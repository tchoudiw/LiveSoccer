<?xml version="1.0" encoding="utf-8"?>
	 
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" > 
	 
	 
	 <LinearLayout 
      	android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="80dp"
		    android:orientation="vertical" >
		
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/journee"
		            android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:text="Equipe1" 
		            android:layout_marginRight="10dp"/>
		         <ImageView
					    android:id="@+id/favorisc"
					    android:layout_width="20dp"
				    	android:layout_height="20dp"
					    android:src="@drawable/favoris" 
					    android:layout_marginRight="40dip" />
		        <TextView
			        android:id="@+id/score1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="0" />
		
		    </LinearLayout>
		
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >

		         <TextView
		            android:id="@+id/equipe2"
		            android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:text="Equipe2" 
		            android:layout_marginRight="10dp"/>

		          <ImageView
		              android:id="@+id/favorisc"
		              android:layout_width="20dp"
		              android:layout_height="20dp"
		              android:layout_marginRight="40dip"
		              android:src="@drawable/favoris"
		              android:visibility="invisible" />

		        <TextView
			        android:id="@+id/score2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="1" />
		         
		    </LinearLayout>
		    
		  </LinearLayout>
		 
		     <TextView
			        android:id="@+id/periode"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="periode" />
		         
	</LinearLayout>

	 <Button
	     android:id="@+id/suivre1"
	     android:layout_width="wrap_content"
	     android:layout_height="35dp"
	     android:layout_marginLeft="140dp"
	     android:ellipsize="marquee"
	     android:gravity="center_vertical|center_horizontal|left"
	     android:text="@string/suivie" />
	
</LinearLayout>
